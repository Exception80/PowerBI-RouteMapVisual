{
    "dataRoles": [
        {
            "displayName": "Market",
            "name": "market",
            "kind": "Grouping"
        },	
		{
            "displayName": "Aiport Code From",
            "name": "codeFrom",
            "kind": "Grouping"
        },
		{
            "displayName": "Latitude From",
            "name": "latFrom",
            "kind": "Measure"
        },
		{
            "displayName": "Longitude From",
            "name": "longFrom",
            "kind": "Measure"
        },
		{
            "displayName": "Aiport Code To",
            "name": "codeTo",
            "kind": "Grouping"
        },	
		{
            "displayName": "Latitude To",
            "name": "latTo",
            "kind": "Measure"
        },
		{
            "displayName": "Longitude To",
            "name": "longTo",
            "kind": "Measure"
        },
        {
            "displayName": "Tooltips",
            "name": "tooltips",
            "kind": "Measure"
        }
    ],
    "dataViewMappings": [
		{
			"conditions": [
				{
                    "market": {
                        "max": 1
                    },
					"codeFrom": {
                        "max": 1
                    },
					"latFrom": {
                        "max": 1
                    },
					"longFrom": {
                        "max": 1
                    },					
					"codeTo": {
                        "max": 1
                    },
					"latTo": {
                        "max": 1
                    },
					"longTo": {
                        "max": 1
                    },
                    "tooltips": { 
                        "max": 0 
                    } 
				},
                {
                    "market": {
                        "min": 1,
                        "max": 1
                    },
					"codeFrom": {
                        "min": 1,
                        "max": 1
                    },
					"latFrom": {
                        "min": 1,
                        "max": 1
                    },
					"longFrom": {
                        "min": 1,
                        "max": 1
                    },					
					"codeTo": {
                        "min": 1,
                        "max": 1
                    },
					"latTo": {
                        "min": 1,
                        "max": 1
                    },
					"longTo": {
                        "min": 1,
                        "max": 1
                    }
				}
			],
            "categorical": {
                "categories": {
                    "select": [
                        { "bind": { "to": "market" } },
                        { "bind": { "to": "codeFrom" } },
                        { "bind": { "to": "codeTo" } }
                    ],
                    "dataReductionAlgorithm": {
                        "top": {}
                    }
                },
				"values": {
                    "group": {
                        "by": "codeTo",
                        "select":[
                            { "bind": { "to": "latFrom" } },
                            { "bind": { "to": "longFrom" } },
                            { "bind": { "to": "latTo" } },
                            { "bind": { "to": "longTo" } },
                            { "for": { "in": "tooltips" } }
                        ]
                    }
                }                
			}
        }                 					
    ],
    "objects": {
        "routes": {
            "displayName": "Routes",
            "properties": {
                "arcColor": {
                    "displayName": "Arc color",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "labelFontColor": {
                    "displayName": "Label font color",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "showOutOfMapMarkerLabels": {
                    "displayName": "Show out map border labels",
                    "type": {
                        "bool": true
                    }
                }
            }
        }        
    }
}